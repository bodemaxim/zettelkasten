#!/bin/sh
. "$(dirname "$0")/husky.sh"

# Получаем сообщение коммита из файла переданного аргументом
COMMIT_MSG_FILE=$1
COMMIT_MSG=$(cat "$COMMIT_MSG_FILE")

# Проверяем длину сообщения
if [ ${#COMMIT_MSG} -lt 3 ]; then
  echo "Предупреждение: сообщение коммита меньше 3 символов. Рекомендуется использовать более информативные сообщения."
  # exit 0 позволит коммиту продолжиться, несмотря на предупреждение
  exit 0
fi