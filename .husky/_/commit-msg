#!/bin/sh
. "$(dirname "$0")/husky.sh"

# Получаем сообщение коммита из файла переданного аргументом
COMMIT_MSG_FILE=$1
COMMIT_MSG=$(cat "$COMMIT_MSG_FILE")

# Проверяем длину сообщения
if [ ${#COMMIT_MSG} -lt 3 ]; then
  echo "Ошибка: сообщение коммита меньше 3 символов. Используйте более информативные сообщения."
  # exit 1 прервет коммит с ошибкой
  exit 1
fi